<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_523_Netflix">
        <!--Panel-->
		
        <control type="group">
            <visible>Control.IsVisible(523)</visible>
            <visible>!Window.IsActive(movieinformation)</visible>
            <include>animation_view_change</include>
			
            <!-- background panel -->
            <control type="image">
                <width>100%</width>
                <height>100%</height>
                <texture colordiffuse="$VAR[Netflix2_PanelColor]">colors/color_white.png</texture>
            </control>
            <!-- background image -->
            <control type="group">
                <posx>0</posx>
                <top>450</top>
                <bottom>0</bottom>
                <width>1920</width>
                <control type="image">
                    <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold.png</texture>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold.png</texture>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$VAR[Netflix2_PanelDiffuse]">colors/color_white.png</texture>
                </control>
            </control>

            <!-- spotlight section -->
            <control type="group" id="3505">
                <width>1920</width>
                <height>450</height>
                <visible>![Skin.HasSetting(NetflixHomeDisableFirstRow) + Skin.String(HomeLayout,netflix2)]</visible>
                
                <!-- spotlight image -->
                <control type="group">
                    <width>60%</width>
                    <right>0</right>
                    <height>550</height>
                    <top>0</top>
                    <control type="image">
                        <fadetime>350</fadetime>
                        <texture background="true" diffuse="special://skin/extras/bgoverlays/Spot.png">$VAR[backgroundVar]</texture>
                        <aspectratio aligny="top">scale</aspectratio>
                    </control>
                    <control type="image">
                        <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold - Left Corner.png</texture>
                    </control>
                    <control type="image">
                        <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold - Left Corner.png</texture>
                    </control>
                </control>
                <control type="image">
                    <left>0</left>
                    <width>40%</width>
                    <height>510</height>
                    <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold.png</texture>
                </control>
                <control type="image">
                    <top>510</top>
                    <width>100%</width>
                    <height>510</height>
                    <texture background="true" colordiffuse="$VAR[Netflix2_PanelColor]">special://skin/extras/bgoverlays/Square Bold.png</texture>
                </control>
                
                <!-- clearlogo -->
                <control type="image">
                    <height>120</height>
                    <width>300</width>
                    <left>50</left>
                    <top>40</top>
                    <aspectratio align="left" aligny="top">keep</aspectratio>
                    <texture background="true">$VAR[ListItemClearLogo]</texture>
                </control>

                <control type="grouplist">
                    <width>800</width>
                    <posx>55</posx>
                    <posy>170</posy>
                    <height>350</height>
                    <orientation>vertical</orientation>

                    <control type="label">
                        <height>70</height>
                        <font>Reg46</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <control type="label">
                        <height>70</height>
                        <font>Reg28</font>
                        <align>left</align>
                        <aligny>center</aligny>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[ListDetails]</label>
                    </control>
                    <control type="textbox">
                        <height>210</height>
                        <label>$VAR[Plots]</label>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <align>justify</align>
                        <font>Reg28</font>
                    </control>
                    
                </control>
                
                <control type="group">
                    <posx>60</posx>
                    <height>50</height>
                    <top>580</top>
                    <include>mediaflags</include>
                    <include condition="window.isactive(videolibrary) + !skin.hastheme(classic) + ![Skin.HasSetting(StudioInFooter) | Skin.HasSetting(IMDBRatingInFooter)]">StarRatingFooter</include>
                    <include condition="window.isactive(videolibrary) + !skin.hastheme(classic) + [Skin.HasSetting(StudioInFooter) | Skin.HasSetting(IMDBRatingInFooter)]">AltRatingFooter</include>
                </control>
                
            </control>
            
            <!-- menu button -->
            <control type="radiobutton" id="5001">
                <width>60</width>
                <height>60</height>
                <right>20</right>
                <top>20</top>
                <font>-</font>
                <selected>Control.HasFocus(51)</selected>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
                <textureradiofocus colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">common/menu.png</textureradiofocus>
                <textureradionofocus colordiffuse="$INFO[Skin.String(ViewDetailsTextColor)]">common/menu.png</textureradionofocus>
                <radiowidth>60</radiowidth>
                <radioheight>60</radioheight>
                <onclick condition="!StringCompare(Window(Home).Property(ShowViewSubMenu),show) + [Skin.String(HomeLayout,win10) | Skin.String(HomeLayout,netflix)]">SetProperty(ShowViewSubMenu, show, Home)</onclick>
                <onclick condition="StringCompare(Window(Home).Property(ShowViewSubMenu),show) + [Skin.String(HomeLayout,win10) | Skin.String(HomeLayout,netflix)]">ClearProperty(ShowViewSubMenu, Home)</onclick>
                <onclick condition="[Skin.String(HomeLayout,win10) | Skin.String(HomeLayout,netflix)]">SetFocus(300)</onclick>
                <onclick condition="![Skin.String(HomeLayout,win10) | Skin.String(HomeLayout,netflix)]">SetFocus(4444,0)</onclick>
                <visible>Skin.HasSetting(EnableTouchSupport) + Window.IsActive(Home)</visible>
                <ondown>510</ondown>
            </control>
            
            <!-- menu button -->
            <control type="radiobutton" id="5001">
                <width>60</width>
                <height>60</height>
                <right>20</right>
                <top>20</top>
                <font>-</font>
                <selected>Control.HasFocus(5001)</selected>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
                <textureradiofocus colordiffuse="$INFO[Skin.String(ButtonTextFocusColor)]">touchcontrols/icon_back.png</textureradiofocus>
                <textureradionofocus colordiffuse="$INFO[Skin.String(ButtonTextColor)]">touchcontrols/icon_back.png</textureradionofocus>
                <radiowidth>60</radiowidth>
                <radioheight>60</radioheight>
                <onclick>Close</onclick>
                <visible>Skin.HasSetting(EnableTouchSupport) + !Window.IsActive(Home)</visible>
                <ondown>510</ondown>
            </control>
			
            <control type="panel" id="523">
                <viewtype label="31018">icons</viewtype>
                <left>50</left>
                <bottom>20</bottom>
                <height>380</height>
                <width>1820</width>
                <orientation>horizontal</orientation>
                <onleft>523</onleft>
                <onright>523</onright>
                <onup>9000</onup>
                <ondown>60</ondown>
                <preloaditems>4</preloaditems>
                <pagecontrol>60</pagecontrol>
                <visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),523) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <itemlayout height="380" width="455" condition="Container.Content(episodes)">
                    <control type="group">
                        <width>97%</width>
                        <height>75%</height>
                        <bottom>30</bottom>
                        <include>ThumbsViewLayout</include>
                    </control>
                </itemlayout>
                <focusedlayout height="380" width="455" condition="Container.Content(episodes)">
                    <control type="group">
                        <width>97%</width>
                        <height>75%</height>
                        <bottom>30</bottom>
                        <include>ThumbsViewLayoutFocus</include>
                    </control>
                </focusedlayout>
                <itemlayout height="380" width="262" condition="!Container.Content(episodes)">
                  <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <include>PosterPanelLayout</include>
                  </control>
                </itemlayout>
                <focusedlayout height="380" width="262" condition="!Container.Content(episodes)">
                  <control type="group">
                    <width>97%</width>
                    <height>97%</height>
                    <include>PosterPanelLayoutFocus</include>
                  </control>
                </focusedlayout>
        
              
              </control>
      
            
        </control>
 	</include>
</includes>