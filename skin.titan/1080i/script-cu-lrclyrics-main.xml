<window>
    <allowoverlay>no</allowoverlay>
    <controls>
	
		<control type="label" id="200">
			<description>Scraper label</description>
			<visible>false</visible>
		</control>
		<control type="spincontrol" id="101">
			<posx>-100</posx>
			<posy>-100</posy>
			<visible>false</visible>
		</control>
		<control type="spincontrol" id="111">
			<posx>-100</posx>
			<posy>-100</posy>
			<visible>false</visible>
		</control>
		<control type="spincontrol" id="121">
			<posx>-100</posx>
			<posy>-100</posy>
			<visible>false</visible>
		</control>
			
		<control type="group">
			<include>animation_window_open_close</include>

			<!-- touchscreen workaround -->
			<!-- hidden button to exit dialog in touchscreen mode -->
			<control type="button">
				<posx>0</posx>
				<posy>0</posy>
				<width>100%</width>
				<height>100%</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Light28</font>
				<label>-</label>
				<textcolor>-</textcolor>
				<focusedcolor>-</focusedcolor>
				<disabledcolor>-</disabledcolor>
				<texturefocus>colors/color_transparent.png</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
					
			
			<control type="group">

				<control type="textbox" id="100">
					<description>textarea</description>
					<posx>100</posx>
					<posy>59</posy>
					<width>1720</width>
					<height>544</height>
					<pagecontrol>102</pagecontrol>
					<font>Bold55</font>
					<align>center</align>
				</control>
				<control type="list" id="110">
					<posx>0</posx>
					<posy>100</posy>
					<width>1920</width>
					<height>575</height>
					<onleft>112</onleft>
					<onright>112</onright>
					<onup>110</onup>
					<ondown>110</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>112</pagecontrol>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<movement>4</movement>
					<itemlayout width="1920" height="70">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>70</height>
							<label fallback="•••">$INFO[ListItem.Label]</label>
							<font>Reg56</font>
							<align>center</align>
							<textcolor>aawhite</textcolor>
						</control>
					</itemlayout>
					<focusedlayout width="1920" height="85">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1920</width>
							<height>85</height>
							<label fallback="•••">$INFO[ListItem.Label,[B],[/B]]</label>
							<font>Reg75</font>
							<align>center</align>
							<textcolor>white</textcolor>
                            <scroll>true</scroll>
						</control>
					</focusedlayout>
				</control>
				
				<control type="fixedlist" id="120">
					<posx>100</posx>
					<posy>0</posy>
					<width>1720</width>
					<height>400</height>
					<onleft>122</onleft>
					<onright>122</onright>
					<onup>120</onup>
					<ondown>120</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>122</pagecontrol>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<focusposition>2</focusposition>
					<movement>4</movement>
					<itemlayout height="50">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1720</width>
							<height>50</height>
							<label fallback="•••">$INFO[ListItem.Label]</label>
							<font>Reg45</font>
							<align>center</align>
							
						</control>
					</itemlayout>
					<focusedlayout height="50">
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>1720</width>
							<height>50</height>
							<label fallback="•••">$INFO[ListItem.Label]</label>
							<font>Bold38</font>
							<align>center</align>
							<textcolor>eewhite</textcolor>
						</control>
					</focusedlayout>
				</control>
			</control>
		</control>
    </controls>
</window>
