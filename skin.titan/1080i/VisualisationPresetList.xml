<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>1000</defaultcontrol>
    <controls>
        <control type="group" id="1000">
            <include>animation_window_open_close</include>
            <visible>!Window.IsVisible(yesnodialog) + !Window.IsVisible(virtualkeyboard) + !Window.IsVisible(numericinput) + ![Window.IsVisible(script-LibraryEditor-genre.xml) + IsEmpty(Window.Property(ShowDialog))] + !Window.IsVisible(script-LibraryEditor-dialogs.xml)</visible>
            <posy>-160</posy>
            <!-- background panel -->
			<control type="image">
				<posx>367</posx>
				<posy>236</posy>
				<width>1190</width>
				<height>690</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			<control type="image">
				<posx>367</posx>
				<posy>236</posy>
				<width>1190</width>
				<height>690</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<bordersize>10</bordersize>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				
			</control>
			
			<!--Header-->
			<control type="label" id="2">
				<description>Heading</description>
				<posx>415</posx>
				<posy>225</posy>
				<width>1100</width>
				<height>100</height>
				<label></label>
				<include>DialogHeader_Alt</include>
				<align>center</align>
				<wrapmultiline>true</wrapmultiline>
			</control>
			
            <control type="group">
                <control type="image">
                    <posx>415</posx>
					<posy>315</posy>
                    <width>1100</width>
                    <height>481</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
            </control>
            <!--List-->
            <control type="list" id="5">
                <!--Container 3 Small-->
                <posx>415</posx>
				<posy>315</posy>
				<width>1100</width>
                <height>480</height>
                <onright>60</onright>
                <onup>3</onup>
                <ondown>3</ondown>
                <onleft>8000</onleft>
                <pagecontrol>60</pagecontrol>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <itemlayout height="60" width="1100">
                    <control type="image">
                        <posx>0</posx>
                        <posy>1</posy>
                        <width>1100</width>
                        <height>60</height>
                        <texture>dialogs/default/separator.png</texture>
                    </control>
                    <control type="label">
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>1020</width>
                        <height>60</height>
                        <include condition="StringCompare(System.Language,Arabic) | StringCompare(System.Language,Hebrew)">align_right</include>
                        <label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
                        <align>left</align>
                        <aligny>center</aligny>
                        <include>DialogListNF</include>
                        <scroll>false</scroll>
                    </control>
                    <control type="image">
                        <right>5</right>
                        <posy>10</posy>
                        <width>40</width>
                        <height>40</height>
                        <texture>common/checkbox.png</texture>
                        <colordiffuse>$INFO[Skin.String(ButtonTextColor)]</colordiffuse>
                        <visible>ListItem.IsSelected</visible>
                    </control>
                </itemlayout>
                <focusedlayout height="60" width="1100">
                    <control type="group">
                        <animation effect="fade" start="100" end="30" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(3)">Conditional</animation>
                        <control type="image">
                            <width>1100</width>
                            <height>60</height>
                            <texture border="5">diffuse/panel.png</texture>
                            <colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
                        </control>
                        <control type="label">
                            <posx>20</posx>
                            <posy>0</posy>
                            <width>1020</width>
                            <height>60</height>
                            <include condition="StringCompare(System.Language,Arabic) | StringCompare(System.Language,Hebrew)">align_right</include>
                            <label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
                            <align>left</align>
                            <aligny>center</aligny>
                            <scroll>true</scroll>
                            <include>DialogListFO</include>
                        </control>
                        <control type="image">
                            <right>5</right>
                            <posy>10</posy>
                            <width>40</width>
                            <height>40</height>
                            <texture>common/checkbox.png</texture>
                            <colordiffuse>$INFO[Skin.String(ButtonFocusTextColor)]</colordiffuse>
                            <visible>ListItem.IsSelected</visible>
                        </control>
                    </control>
                </focusedlayout>
				
			</control>
			<control type="scrollbar" id="60">
				<posx>1520</posx>
				<posy>315</posy>
				<height>480</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>3</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>

			<!--Buttons-->
            <control type="grouplist" id="8000">
				<posx>410</posx>
				<posy>820</posy>
				<width>1050</width>
				<height>690</height>
				<orientation>horizontal</orientation>
				<onup condition="Control.IsVisible(6)">6</onup>
				<ondown condition="Control.IsVisible(6)">6</ondown>
				<onup condition="!Control.IsVisible(6)">3</onup>
				<ondown condition="!Control.IsVisible(6)">3</ondown>
                <control type="button" id="5">
                    <description>OK</description>
					<left>0</left>
                    <label>186</label>
                    <width>500</width>
                    <include>DialogButtonOther</include>
                    <height>80</height>
					<onright>7</onright>
                    <onclick>PreviousMenu</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>