<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="120">
    <defaultcontrol always="true">200</defaultcontrol>
    <onload>SetFocus($INFO[Skin.String(defaultosdbutton_music)])</onload>
    <allowoverlay>no</allowoverlay>
    <controls>
		<!-- hidden button to exit dialog in touchscreen mode -->
		<control type="button">
			<posx>0</posx>
			<posy>0</posy>
			<width>100%</width>
			<height>100%</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>Light28</font>
			<label>-</label>
			<textcolor>-</textcolor>
			<focusedcolor>-</focusedcolor>
			<disabledcolor>-</disabledcolor>
			<texturefocus>colors/color_transparent.png</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onclick>back</onclick>
			<visible>Skin.HasSetting(EnableTouchSupport)</visible>
		</control>
        <control type="group">
			<include condition="skin.hastheme(classic)">MusicOSDClassic</include>
			<include condition="!Skin.HasTheme(classic)">OSDButtonsModern</include>
            <animation effect="slide" end="0,-50" time="0" condition="Skin.HasSetting(enableArtistBio) + !IsEmpty(Window(Home).Property(SkinHelper.Player.Music.Info))">Conditional</animation>
		</control>
	</controls>
</window>