<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!window.isactive(fullscreenvideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>640</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			<!-- close dialog -->
            <control type="group">
                <include>animation_fade_visible_hidden</include>
                <right>60</right>
                <width>60</width>
                <posy>40</posy>
                <include condition="Skin.HasSetting(EnableTouchSupport)">close_button</include>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
                <label>19047</label>
                <align>left</align>
				<height>100</height>
            </control>
			<!-- program title -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>241</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="button">
                    <description>Time</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>900</textwidth>
                    <include>DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[142]</label>
                    <label2>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ] ($INFO[ListItem.StartDate])</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Duration</description>
                    <posx>0</posx>
                    <posy>59</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include>DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[180]:</label>
                    <label2>$VAR[ListItemDuration]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Channel</description>
                    <posx>0</posx>
                    <posy>118</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include>DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[19148]:</label>
                    <label2>$INFO[ListItem.ChannelName]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>177</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include>DialogLabel</include>
                    <texturenofocus>-</texturenofocus>
                    <label>$LOCALIZE[135]:</label>
                    <label2 fallback="161">$INFO[ListItem.Genre]</label2>
                    <enable>false</enable>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="400">
                <description>Plot value</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>380</height>
                <align>justify</align>
                <include condition="!Skin.HasTheme(classic)">DialogLabel</include>
                <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                <pagecontrol>60</pagecontrol>
                <label fallback="161">$INFO[ListItem.Plot]</label>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>680</posx>
                <posy>940</posy>
				<onleft>back</onleft>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <onup>60</onup>
                    <ondown>60</ondown>
                <defaultcontrol>5</defaultcontrol>
         				<control type="button" id="5">
                    <!--Switch-->
                    <width>290</width>
                    <include>DialogButtonOther</include>
                    <label>$LOCALIZE[19165]</label>
					<font>Reg26</font>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
                <control type="button" id="6">
                    <!--Record-->
                    <width>290</width>
                    <label>-</label>
                    <include>DialogButtonOther</include>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
                <control type="button" id="8">
                    <!--play Recording-->
                    <width>290</width>
                    <label>19687</label>
                    <include>DialogButtonOther</include>
                    <visible>Window.IsActive(PVRRecordingInfo)</visible> 
                </control>
				<control type="button" id="4">
					<width>290</width>
					<description>Find similar</description>
					<include>DialogButtonOther</include>
					<label>19003</label>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
				</control>
				<control type="button" id="7">
                    <!--Cancel-->
                    <width>290</width>
                    <label>$LOCALIZE[222]</label>
                    <include>DialogButtonOther</include>
					<font>Reg26</font>
                    <visible>Window.IsActive(PVRGuideInfo)</visible> 
                </control>
            </control>
        </control>
    </controls>
</window>